extends layout

block content
  form(method="post", action="/words").my-3
    input(type="hidden", name="_csrf" value!=csrfToken)
    div.form-group
      label(for="word") キーワード
      span.small-font.text-muted （20文字以内）
      input(type="text", name="word" maxlength="20")#word.form-control
    div.form-group
      label(for="description") 説明
      span.small-font.text-muted （説明の記入は任意です）
      textarea(name="description" rows="4")#description.form-control
    button(type="submit").btn.btn-main-color 投稿する